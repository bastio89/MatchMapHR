# MatchMap HR - Umgebungsvariablen
# Kopiere diese Datei nach .env.local und fülle die Werte aus

# Database (Supabase PostgreSQL)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/matchmap_hr?schema=public"

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# NextAuth / Session Secret
NEXTAUTH_SECRET="your-super-secret-key-min-32-chars"
NEXTAUTH_URL="http://localhost:3000"

# n8n Integration
N8N_WEBHOOK_START_URL="http://localhost:5678/webhook/matchmap-start"
N8N_CALLBACK_HMAC_SECRET="your-hmac-secret-for-n8n-callbacks"

# File Upload Configuration
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE_MB="10"

# Application
APP_BASE_URL="http://localhost:3000"
NODE_ENV="development"

# Billing Configuration (Placeholder für Stripe)
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""

# Free Tier Configuration
FREE_REQUESTS_STARTER_PLAN="1"
